{
  "name": "boe-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npx jest --no-cache",
    "test:watch": "npx jest --watchAll --no-cache"
  },
  "dependencies": {
    "next": "12.0.2",
    "node-fetch": "^3.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.6",
    "@types/react": "17.0.34",
    "@types/styled-components": "^5.1.15",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.2",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "jest": {
    "rootDir": ".",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": ".*\\.spec\\.tsx?$",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)sx?"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom"
  }
}
